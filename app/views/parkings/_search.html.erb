<h2><%= t("parkings.search.title") %></h2>
<%= form_tag parkings_path, method: 'get' do %>
  <p>
    <%= label_tag :city_name, t("parkings.search.city") %><br />
    <%= text_field_tag :city_name, params[:city_name] %>
  </p>

  <p>
    <strong><%= t("parkings.search.day_price_range") %></strong><br />
    <%= text_field_tag :day_price_min, params[:day_price_min] %> -
    <%= text_field_tag :day_price_max, params[:day_price_max] %>
  </p>
  <p>
    <strong><%= t("parkings.search.hour_price_range") %></strong><br />
    <%= text_field_tag :hour_price_min, params[:hour_price_min] %> -
    <%= text_field_tag :hour_price_max, params[:hour_price_max] %>
  </p>

  <p>
    <%= check_box_tag :private, :private, params[:private] %>
    <%= label_tag :private, t("parkings.search.private") %>
  </p>

  <p>
    <%= check_box_tag :public, :public, params[:public] %>
    <%= label_tag :public, t("parkings.search.public") %>
  </p>

  <p><%= submit_tag t("parkings.search.submit") %></p>
<% end %>
