<%= form_for @car do |f| %>

  <% if @car.errors.any? %>
    <div>
      <h2>
        <%= pluralize(@car.errors.count, "error") %> <%= t("cars.form.error") %>
      </h2>
      <ul>
        <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </p>

  <p>
    <%= f.label :registration_number %><br>
    <%= f.text_field :registration_number %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
